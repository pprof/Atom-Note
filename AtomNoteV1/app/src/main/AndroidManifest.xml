<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.profits.atomnotev1" >
    <uses-permission android:name="android.permission.INTERACT_ACROSS_USERS_FULL"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
   <uses-permission
       android:name="android.permission.INTERACT_ACROSS_USERS_FULL"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity android:name=".MainActivity" >
            <intent-filter android:label="Atom Note build 4" >
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AboutPage"
            android:label="About" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.profits.atomnotev1.MainActivity" />
        </activity>
        <activity
            android:name=".tabs.Help"
            android:label="@string/title_activity_help" >
        </activity>
        <activity
            android:name=".add_folder_activity"
            android:label="@string/title_activity_add_folder_activity" >
        </activity>
        <activity
            android:name=".RecordNote"
            android:label="@string/title_activity_record_note" >
        </activity>
        <activity
            android:name=".ReadNotes"
            android:label="@string/title_activity_read_notes" >
           <meta-data android:name="android.support.PARENT_ACTIVITY" android:value="com.example.profits.atomnotev1.MainActivity"/>
        </activity>

        <activity
            android:name=".FolderView"
            android:label="@string/title_activity_folder_view" >
        </activity>
        <activity
            android:name=".FolderAddNotes"
            android:label="@string/title_activity_folder_add_notes" >
        </activity>
        <activity
            android:name=".SubReadNotes"
            android:label="@string/title_activity_sub_read_notes" >
        </activity>
    </application>

</manifest>
